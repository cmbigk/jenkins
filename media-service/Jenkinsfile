pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9'
        jdk 'JDK-21'
    }
    
    environment {
        SERVICE_NAME = 'media-service'
        DOCKER_IMAGE = "ecommerce/${SERVICE_NAME}"
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    parameters {
        choice(name: 'ENVIRONMENT', choices: ['dev', 'staging', 'production'], description: 'Deployment Environment')
        booleanParam(name: 'SKIP_TESTS', defaultValue: false, description: 'Skip tests?')
        booleanParam(name: 'DEPLOY', defaultValue: true, description: 'Deploy after build?')
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo "Checking out ${SERVICE_NAME}..."
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('media-service') {
                    echo "Building ${SERVICE_NAME}..."
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Unit Tests') {
            when {
                expression { params.SKIP_TESTS == false }
            }
            steps {
                dir('media-service') {
                    echo "Running unit tests for ${SERVICE_NAME}..."
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java'
                    )
                }
            }
        }
        
        stage('Package') {
            steps {
                dir('media-service') {
                    echo "Packaging ${SERVICE_NAME}..."
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                dir('media-service') {
                    echo "Building Docker image for ${SERVICE_NAME}..."
                    script {
                        docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                        docker.build("${DOCKER_IMAGE}:latest")
                    }
                }
            }
        }
        
        stage('Deploy') {
            when {
                expression { params.DEPLOY == true }
            }
            steps {
                script {
                    sh """
                        docker stop ${SERVICE_NAME} 2>/dev/null || true
                        docker rm ${SERVICE_NAME} 2>/dev/null || true
                        docker run -d \
                            --name ${SERVICE_NAME} \
                            --network buy-01_default \
                            -p 8083:8083 \
                            ${DOCKER_IMAGE}:${DOCKER_TAG}
                    """
                }
            }
        }
    }
    
    post {
        success {
            slackSend(color: 'good', message: "✅ ${SERVICE_NAME} #${BUILD_NUMBER} SUCCESS")
        }
        failure {
            slackSend(color: 'danger', message: "❌ ${SERVICE_NAME} #${BUILD_NUMBER} FAILED")
        }
    }
}
